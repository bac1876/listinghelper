# Cloudinary Configuration (Required for video generation)
# Sign up at https://cloudinary.com for free account
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# GitHub Actions Configuration (Required for high-quality video rendering)
# Set up GitHub Actions workflow in your repo
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_OWNER=your_github_username
GITHUB_REPO=your_repo_name
USE_GITHUB_ACTIONS=true  # Set to true to enable GitHub Actions rendering
GITHUB_WEBHOOK_SECRET=your_webhook_secret  # Optional but recommended

# Flask Configuration
FLASK_ENV=production
PORT=5000